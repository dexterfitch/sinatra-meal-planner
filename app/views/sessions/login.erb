<div class="container">
  <div class="row">
    <div class="col-12">

      <h1>Login</h1>

      <% if logged_in? %>

        <p>You are already logged in!</p>
        <a class="btn btn-primary margin-top-2x" href="/logout">Logout</a>

      <% else %>
        
        <form action="/sessions" method="POST">
          <p>
            <label for="username">Username:</label>
            <input class="input-100" type="text" name="username" id="username">
          </p>

          <p>
            <label for="password">Password:</label>
            <input class="input-100" type="password" name="password" id="password">
          </p>

          <input class="btn btn-primary margin-top-2x" type="submit" value="Submit">
        </form>

      <% end %>

    </div>
  </div>
</div>